<% layout("allthing/boiler/boiler.ejs") %>
<body>
    <h1 class="px-5 offset-2">edit theam</h1>
   <div class="row">
    <div class="col-8 offset-2">
      <form class="px-5" method="post" action='/allthing/listing/<%=data._id%>/edit'  >
